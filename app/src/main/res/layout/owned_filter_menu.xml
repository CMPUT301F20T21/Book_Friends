<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/filter_menu_background"
    android:padding="5sp" >

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/filter_menu_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_available"
        android:checked="true"
        android:layout_alignParentTop="true" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/filter_menu_requested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_requested"
        android:checked="true"
        android:layout_below="@+id/filter_menu_available" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/filter_menu_accepted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_accepted"
        android:checked="true"
        android:layout_below="@+id/filter_menu_requested" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/filter_menu_borrowed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_borrowed"
        android:checked="true"
        android:layout_below="@+id/filter_menu_accepted" />
</LinearLayout>